# Wildcat WhatsApp Integration Environment Variables

# Server Configuration
HOST=0.0.0.0
PORT=3000

# Database Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=wildcat

# Admin Notifications (Optional)
# When set, all connected accounts send a startup message to this number
ADMIN_NUMBER=1234567890@s.whatsapp.net

# Logging
LOG_LEVEL=info

# Startup behavior
# When true, attempts to auto-connect all restored accounts
AUTO_CONNECT_ON_START=false

# ============================================================
# Security Configuration - Phase 2
# ============================================================

# Basic Authentication
# Enable username/password authentication
BASIC_AUTH_ENABLED=false
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=changeme

# API Key Authentication
# Enable API key authentication via X-API-Key header
# Format: JSON object with keys as API keys and values as permission strings
# Example: {"key1":"read,write","key2":"read"}
API_KEYS_ENABLED=false
API_KEYS='{"your-api-key":"read,write"}'

# Rate Limiting
# Enable global rate limiting
RATE_LIMIT_ENABLED=false
# Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Webhook URL Validation (SSRF Prevention)
# Enable validation of webhook URLs to prevent SSRF attacks
WEBHOOK_URL_VALIDATION_ENABLED=false
# Require HTTPS for webhooks in production
ENFORCE_HTTPS_WEBHOOKS=false
